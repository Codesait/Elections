<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chiemela.election_waka.Activities.Video">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <VideoView
        android:id="@+id/iv_addtreeImages"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#000"
        android:layout_centerHorizontal="true"
       android:layout_margin="5dp" />

    <ImageView
        android:id="@+id/iv_add_tree1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@id/iv_addtreeImages"
        android:layout_alignEnd="@id/iv_addtreeImages"
        android:layout_alignRight="@id/iv_addtreeImages"
        app:srcCompat="@drawable/ic_videocam_black" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/playLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/iv_addtreeImages">

        <ImageButton
            android:id="@+id/ibtplay"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_play_arrow"/>

        <ImageButton
            android:id="@+id/imbpause"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_pause"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_content1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/playLayout"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/tv_tree_coordinates1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/box"
            android:fontFamily="sans-serif"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_person_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_tree_coordinates1"
            android:layout_marginTop="10dp"
            android:background="@drawable/box"
            android:fontFamily="sans-serif"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textSize="18sp" />



        <Spinner
            android:id="@+id/spTreeType1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:entries="@array/ElectionType"
            android:background="@drawable/box"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <View
            android:id="@+id/view"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark" />


        <TextView
            android:id="@+id/text"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ask for help"
            android:textSize="40dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/view"/>


        <Button
            android:id="@+id/submit_tree1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/submitbox"
            android:text="Help"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>
</RelativeLayout>

</ScrollView>
